<form action="/auth/signup" method="POST">
      <div class="row">
        <div >
          <input placeholder="First Name" id="first_name" name="first_name" type="text" required>
        </div>
        <div >
          <input placeholder="Last Name" id="last_name" name="last_name" type="text" required>
        </div>
        <div >
          <input placeholder="username" id="username" name="username" type="text" required>
        </div>
        <div >
          <input placeholder="Email" id="email" name="email" type="text" required>
        </div>
        <div >
          <input placeholder="******" id="password" name="password" type="password"  required>
        </div>
        <div >
          <input class="waves-effect waves-light btn" type="submit" value="Login" />
        </div>
      </div>
</form>

